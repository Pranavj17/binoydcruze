---
import { siteConfig } from '@/data/siteConfig';
---

<section id="home" class="relative min-h-screen flex items-center overflow-hidden bg-gradient-mesh pt-20">
  <!-- Gradient Orbs -->
  <div class="absolute top-20 left-10 w-72 h-72 bg-gold/20 rounded-full blur-3xl animate-pulse-slow"></div>
  <div class="absolute bottom-20 right-10 w-96 h-96 bg-blue/20 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 1.5s;"></div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="space-y-8">
        <div class="space-y-4">
          <p class="text-gold font-medium tracking-wide uppercase text-sm animate-fade-in">
            SEBI Certified Professional â€¢ 20+ Years Experience
          </p>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold leading-tight animate-fade-up" style="animation-delay: 0.1s;">
            Navigate Your Path to
            <span class="text-gold">Financial Freedom</span>
            &
            <span class="text-blue">Inner Peace</span>
          </h1>
        </div>

        <p class="text-xl text-slate max-w-xl animate-fade-up" style="animation-delay: 0.2s;">
          Bridging the gap between wealth management and well-being.
          Expert guidance in personal finance, investment strategy, and
          the psychology of lasting happiness.
        </p>

        <div class="flex flex-wrap gap-4 animate-fade-up" style="animation-delay: 0.3s;">
          <a href="/#contact" class="btn btn-gold">
            Schedule Consultation
          </a>
          <a href="/#services" class="btn btn-outline">
            Explore Services
          </a>
        </div>

        <!-- Trust Indicators -->
        <div class="flex flex-wrap gap-8 pt-4 animate-fade-up" style="animation-delay: 0.4s;">
          <div class="text-center">
            <div class="text-3xl font-bold text-gold">20+</div>
            <div class="text-sm text-slate">Years Experience</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-gold">500+</div>
            <div class="text-sm text-slate">Clients Served</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-gold">SEBI</div>
            <div class="text-sm text-slate">Certified Advisor</div>
          </div>
        </div>
      </div>

      <!-- Professional Image -->
      <div class="hidden lg:block relative animate-fade-in" style="animation-delay: 0.5s;">
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-tr from-gold/30 to-blue/30 rounded-2xl transform rotate-3"></div>
          <img
            src="/images/binoy-hero.webp"
            alt={siteConfig.author.name}
            class="relative rounded-2xl shadow-2xl transform -rotate-2 hover:rotate-0 transition-transform duration-500 w-full h-auto object-cover aspect-[4/5]"
            width="500"
            height="625"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <a href="/#about" class="text-slate/50 hover:text-slate transition-colors">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>
