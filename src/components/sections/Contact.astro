---
import { siteConfig } from '@/data/siteConfig';
import ContactForm from '@/components/ui/ContactForm';
---

<section id="contact" class="section-padding bg-gradient-navy text-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl md:text-5xl font-heading font-bold mb-4">
        Get In Touch
      </h2>
      <div class="w-24 h-1 bg-gradient-gold mx-auto mb-6"></div>
      <p class="text-xl text-blue-light">
        Let's start your journey to financial freedom and inner peace together
      </p>
    </div>

    <!-- Contact Grid -->
    <div class="grid lg:grid-cols-5 gap-12 max-w-6xl mx-auto">
      <!-- Contact Form -->
      <div class="lg:col-span-3 bg-white rounded-2xl p-8 shadow-2xl">
        <ContactForm client:load />
      </div>

      <!-- Contact Info -->
      <div class="lg:col-span-2 space-y-8">
        <div>
          <h3 class="text-2xl font-heading font-semibold mb-6">
            Contact Information
          </h3>
          <div class="space-y-6">
            <!-- Email -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <div class="text-sm text-blue-light mb-1">Email</div>
                <a href={`mailto:${siteConfig.links.email}`} class="text-white hover:text-gold transition-colors">
                  {siteConfig.links.email}
                </a>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <div class="text-sm text-blue-light mb-1">Phone</div>
                <a href={`tel:${siteConfig.links.phone}`} class="text-white hover:text-gold transition-colors">
                  {siteConfig.links.phone}
                </a>
              </div>
            </div>

            <!-- LinkedIn -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-gold" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </div>
              <div>
                <div class="text-sm text-blue-light mb-1">LinkedIn</div>
                <a
                  href={siteConfig.links.linkedin}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-white hover:text-gold transition-colors"
                >
                  Connect with me
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Availability -->
        <div class="bg-white/10 rounded-xl p-6">
          <h4 class="font-heading font-semibold mb-3">Availability</h4>
          <p class="text-sm text-blue-light mb-4">
            I typically respond to inquiries within 24-48 hours during business days.
          </p>
          <p class="text-sm text-blue-light">
            For urgent matters, please mention "Urgent" in your message subject.
          </p>
        </div>

        <!-- SEBI Badge -->
        <div class="bg-white/10 rounded-xl p-6 text-center">
          <svg class="w-12 h-12 text-gold mx-auto mb-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <div class="text-sm font-medium">SEBI Certified</div>
          <div class="text-xs text-blue-light mt-1">Investment Advisor</div>
        </div>
      </div>
    </div>
  </div>
</section>
