---
import { siteConfig } from '@/data/siteConfig';
import { footerNavigation } from '@/data/navigation';
---

<footer class="bg-navy text-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <div class="text-3xl font-heading font-semibold mb-4">
          {siteConfig.name}
        </div>
        <p class="text-blue-light max-w-md mb-6">
          {siteConfig.description}
        </p>
        <div class="flex gap-4">
          <a
            href={siteConfig.links.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-white/10 hover:bg-gold transition-colors flex items-center justify-center"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-xl font-heading font-semibold mb-4">Services</h3>
        <ul class="space-y-3">
          {footerNavigation.services.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-blue-light hover:text-gold transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-xl font-heading font-semibold mb-4">Company</h3>
        <ul class="space-y-3">
          {footerNavigation.company.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-blue-light hover:text-gold transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-blue-light text-sm">
        Â© {new Date().getFullYear()} {siteConfig.name}. All rights reserved.
      </p>
      <div class="flex gap-6">
        {footerNavigation.legal.map((link) => (
          <a
            href={link.href}
            class="text-blue-light hover:text-gold text-sm transition-colors"
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
